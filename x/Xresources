! Make fonts pretty
! https://wiki.archlinux.org/index.php/Font_Configuration#Applications_without_fontconfig_support
Xft.autohint: false
Xft.lcdfilter: lcddefault
Xft.hintstyle: hintfull
Xft.hinting: true
Xft.antialias: true
Xft.rgba: rgb

! Make fonts behave consistently between different monitor DPIs.
Xft.dpi: 96

! Set a nice font
urxvt.font: xft:Droid Sans Mono:size=11
urxvt.boldFont: xft:Droid Sans Mono:size=11
! Do not show scrollbar
urxvt.scrollBar: false
! Set visible cursor color
urxvt.cursorColor: white
! Remember more lines
urxvt.saveLines: 1000
! Do not scroll on tty output
urxvt.scrollTtyOutput: false
urxvt.scrollWithBuffer: true
urxvt.scrollTtyKeypress: true

! Default xterm colors
! Use `xtermcontrol --get-colorX` to read them from a running terminal.
urxvt.background: black
urxvt.foreground: white
! Black
urxvt.color0:  #000000
urxvt.color8:  #7f7f7f
! Red
urxvt.color1:  #cd0000
urxvt.color9:  #ff0000
! Green
urxvt.color2:  #00cd00
urxvt.color10: #00ff00
! Yellow
urxvt.color3:  #cdcd00
urxvt.color11: #ffff00
! Blue
urxvt.color4:  #0000ee
! Override the default with a lighter color
! urxvt.color12: #5c5cff
urxvt.color12: #8888ff
! Magenta
urxvt.color5:  #cd00cd
urxvt.color13: #ff00ff
! Cyan
urxvt.color6:  #00cdcd
urxvt.color14: #00ffff
! Grey
urxvt.color7:  #e5e5e5
urxvt.color15: #ffffff

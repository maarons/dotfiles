! Make fonts pretty
! https://wiki.archlinux.org/index.php/Font_Configuration#Applications_without_fontconfig_support
Xft.autohint: false
Xft.lcdfilter: lcddefault
Xft.hintstyle: hintfull
Xft.hinting: true
Xft.antialias: true
Xft.rgba: rgb

! Set a nice font
urxvt.font: xft:Droid Sans Mono:size=11
! Do not show scrollbar
urxvt.scrollBar: false
! Set dark background colour
urxvt.background: black
urxvt.foreground: white
! Set visible cursor colour
urxvt.cursorColor: white
! Make blue colour a little lighter
urxvt.color4: #55f
urxvt.color12: #88f
! Remember more lines
urxvt.saveLines: 1000
! Don not scroll on tty output
urxvt.scrollTtyOutput: false
urxvt.scrollWithBuffer: true
urxvt.scrollTtyKeypress: true

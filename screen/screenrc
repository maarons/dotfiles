vbell off
bell_msg ""
defscrollback 100000
# C-a conflicts with GNU Readline, change it to C-o.
escape ^Oo
startup_message off
hardstatus string "[screen %n: %t]"
# Close window as soon as process inside ends.
zombie
# Just use the $SHELL, don't start it as a login shell.
shell $SHELL

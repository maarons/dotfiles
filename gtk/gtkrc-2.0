# Clearlooks theme with forced Tango icons and DejaVu Sans fonts
gtk-theme-name="Clearlooks"
gtk-icon-theme-name="Tango"
style "font" {
    font_name = "DejaVu Sans 10"
}
widget_class "*" style "font"
gtk-font-name = "DejaVu Sans 10"
